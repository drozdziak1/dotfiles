# Keyboard

# Volume Up
"pamixer -i 5"
   XF86AudioRaiseVolume

# Volume Down
"pamixer -d 5"
   XF86AudioLowerVolume
# Mute
"pamixer -t"
   XF86AudioMute

# Normal media keys
"playerctl play-pause"
   XF86AudioPlay

"playerctl previous"
   XF86AudioPrev

"playerctl next"
   XF86AudioNext

"xbacklight -inc 5 -time 0; notify-send -t 500 Backlight: $(xbacklight)\%"
   XF86MonBrightnessUp

"xbacklight -dec 5 -time 0; notify-send -t 500 Backlight: $(xbacklight)\%"
   XF86MonBrightnessDown

"xbacklight -inc 1 -time 0; notify-send -t 500 Backlight: $(xbacklight)\%"
   Control + XF86MonBrightnessUp

"xbacklight -dec 1 -time 0; notify-send -t 500 Backlight: $(xbacklight)\%"
   Control + XF86MonBrightnessDown

# Ctrl + Scroll Lock => play/pause
"xte 'key XF86AudioPlay'; playerctl play-pause"
   Control + Scroll_Lock

# Ctrl + PrtScr => previous song
"xte 'key XF86AudioPrev'; playerctl previous"
   Control + Print

# Ctrl + PauseBreak => next song
"xte 'key XF86AudioNext'; playerctl next"
   Control + Pause

# PrtScr => screenshot
"scrot screenshot.png"
   Print

# Menu => screenshot with window selection
"scrot -s screenshot.png"
   Menu + Release

"notify-send 'Starting lulu'; ~/lulu"
Mod4 + slash

"killall lulu && notify-send 'Killed lulu' || notify-send 'No lulu killed'"
   Shift + Mod4 + slash
