# get the password
source "gpg -dq $HOME/.mutt/passwords.gpg |"

# set the color scheme
source ~/mutt-colors-solarized/mutt-colors-solarized-dark-16.muttrc

# Receive options
set imap_user = "drozdziak1@gmail.com"
set folder = imaps://drozdziak1@imap.gmail.com/
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent

# cache options
set message_cachedir = ~/.cache/mutt/messages
set header_cache = ~/.cache/mutt/headers

# Send options
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com
set realname='Stanisław Drozd'
set from=drozdziak1@gmail.com
set hostname="gmail.com"
set signature="Stanisław Drozd"

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

# Sorting options
set sort = reverse-threads

source ~/.gpg.rc

# PGP setup
set pgp_use_gpg_agent = yes
set pgp_timeout = 3600
set crypt_autosign = no
set crypt_replysign = yes
set crypt_replyencrypt = yes
set crypt_replysignencrypted = yes
